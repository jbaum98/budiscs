template(name='login')
    #loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal')
                      span(aria-hidden='true') Ã—
                      span.sr-only Close
                    h4#myModalLabel.modal-title Admin Login
                .modal-body
                    form#login(role='form')
                        .form-group.row
                            label(for='username') Username:
                            input#username.form-control(type='text', placeholder='')
                        .form-group.row
                            label(for='password') Password
                            input#password.form-control(type='password', placeholder='')
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button#login-submit.btn.btn-primary(type='button') Submit